* unit tests for the simple agent stuff 
* fuzzie, 06/06/04

DBG: OUTS "TEST: simpleagent: 4 tests"

* test NULL
SETA VA00 NULL
DOIF VA00 eq NULL
 DBG: OUTS "PASS"
ELSE
 DBG: OUTS "FAIL"
ENDI

* test NEW: SIMP
NEW: SIMP 3 2 1 "bluebell" 1 0 0
DOIF TARG eq NULL
 DBG: OUTS "FAIL"
ELSE
 DBG: OUTS "PASS"
ENDI

* test ATTR
ATTR 3575 * all attributes relevant to agents
DOIF ATTR eq 3575
 DBG: OUTS "PASS"
ELSE
 DBG: OUTS "FAIL"
ENDI

* test FMLY/SPCS/GNUS
SETV VA00 0
DOIF SPCS eq 1
 ADDV VA00 1
ENDI
DOIF GNUS eq 2
 ADDV VA00 1
ENDI
DOIF FMLY eq 3
 ADDV VA00 1
ENDI
DOIF VA00 eq 3
 DBG: OUTS "PASS"
ELSE
 DBG: OUTS "FAIL"
ENDI

* test OV00
SETV OV00 1
DOIF OV00 eq 1
 DBG: OUTS "PASS"
ELSE
 DBG: OUTS "FAIL"
ENDI

* test ENUM
SETV VA00 0
NEW: SIMP 3 2 1 "bluebell" 1 0 0
SETV OV00 2
ENUM 3 2 1
 ADDV VA00 OV00
NEXT
DOIF VA00 eq 3
 DBG: OUTS "PASS"
ELSE
 DBG: OUTS "FAIL"
ENDI

